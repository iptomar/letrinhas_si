extends layout

block content
    form(id="test", method="POST", action="/BackOffice/Classes/Create" enctype="multipart/form-data") 
        h1 Adicionar Turma
        | Selecione a Escola:
        select(name="schoolId")
          each school in escolas
             option(value="#{school.id}")= school.schoolName
        br
        | Ano:
        br
        | 1º
        input(type="radio", name="year_filter", value="1" checked)
        | 2º 
        input(type="radio", name="year_filter", value="2")
        | 3º 
        input(type="radio", name="year_filter", value="3")
        | 4º 
        input(type="radio", name="year_filter", value="4")
        br
        | Nome da turma:
        input(type='text', name = "className" required)
        br
        | Ano Letivo:
        select(name="classYear") 
            option(value="2013-2014") 2013-2014
            option(value="2014-2015") 2014-2015
            option(value="2015-2016") 2015-2016
            option(value="2016-2017") 2016-2017
            option(value="2017-2018") 2017-2018
            option(value="2018-2019") 2018-2019
            option(value="2019-2020") 2019-2020
            option(value="2020-2021") 2020-2021
            option(value="2021-2022") 2021-2022
            option(value="2022-2023") 2022-2023
            option(value="2023-2024") 2023-2024
            option(value="2024-2025") 2024-2025
            option(value="2025-2026") 2025-2026
        br
        input(type="submit")
    script(type="text/javascript", src="/scripts/formtest.js")

 