extends layout

block content
    h1 Editar dados de uma escola

    form(novalidate class="form-horizontal" id="letrinhas-add-form", method="POST", action="/BackOffice/Schools/Edit?schoolId=#{school.id}")
        input(type="hidden" value="#{school.id}" name="id")

        div(class="form-group")
            label(for="schoolName", class="control-label col-sm-2") Nome da escola

            div(class="col-sm-10")
                input(type="text", value="#{school.schoolName}" id="schoolName", name="schoolName", required, maxlength="40" class="form-control", placeholder="Nome da escola")

        div(class="form-group")
            label(for="schoolAddress", class="control-label col-sm-2") Morada

            div(class="col-sm-10")
                input(type="text", value="#{school.schoolAddress}" id="schoolAddress", name="schoolAddress", required, maxlength="90" class="form-control", placeholder="Endereço da escola")
        
        div(class="form-group")                        
            div(class="col-sm-offset-2 col-sm-10")
                input(type="submit", class="btn btn-primary" id="form-submit", value="Terminar")

block additionalScripts
    script(src="/scripts/jquery/jquery.validate.min.js")
    script(src="/scripts/jquery/messages_pt_PT.js")

    script.
        (function () {
            $('#letrinhas-add-form').validate();
        }());


      