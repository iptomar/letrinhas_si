extends layout

block content
    h1 Lista de Alunos
    p #{title}
    table(border =1)
     tr(align="center")
      td Foto do Aluno
      td Nome
      td Escola
      td Ano
      td Turma
      td Estado (1 = Activo | 0 = Inativo)
      td Alterar a turma
       -for (var id in items)
        - var item = items[id]
         tr
          td  
           img(src= "/#{item.photoUrl}" height="42" width="42")
          td #{item.name} 
          td #{item.schoolName}
          td #{item.classLevel}
          td #{item.className}
          td #{item.isActive}
          td 
           a(href="/BackOffice/Students/Edit/Class?studentId=#{item.id}") Mudar de Turma
        
    a(href="/") Voltar