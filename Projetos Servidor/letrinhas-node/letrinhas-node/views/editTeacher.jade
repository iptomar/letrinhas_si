extends layout

block content
    
    h1 Adicionar Professor

    form(novalidate, id="letrinhas-edit-prof", class="form-horizontal", role="form", method="POST", action="/BackOffice/Professors/Edit/#{itemsProfessor[0].id}")
        -var items = itemsProfessor[0]
            input(type="hidden", id="id", name = "id", value ="#{items.id}")
            div(class="form-group")
                label(for="name", class="control-label col-sm-2") Nome

                div(class="col-sm-10")
                    input(type="text", id="name", name="name", value ="#{items.name}", required, class="form-control", placeholder="Nome")

            div(class="form-group")
                label(for="mail", class="control-label col-sm-2") Endereço de e-mail

                div(class="col-sm-10")
                    input(type="email", id="mail", name="mail", value ="#{items.emailAddress}",  required, class="form-control", placeholder="exemplo@exemplo.pt")

            div(class="form-group")
                label(for="phone", class="control-label col-sm-2") Nº de Telefone

                div(class="col-sm-10")
                    input(type="text", id="phone", name="phone", value ="#{items.telephoneNumber}",  required, maxlength="9", class="form-control", placeholder="910000000")

            div(class="form-group")
                label(for="username", class="control-label col-sm-2") Username

                div(class="col-sm-10")
                    input(type="text", id="username", name="username", value ="#{items.username}",  required, maxlength="9", class="form-control", placeholder="username")

            div(class="form-group")
                label(for="password", class="control-label col-sm-2") PIN

                div(class="col-sm-10")
                    input(type="text", id="password", name="password",  value ="#{items.password}",  required, minlength="4", maxlength="4" class="form-control", placeholder="1234")
                    
            div(class="form-group")
                label(for="state_filter", class="control-label col-sm-2") Estado do professor
                    
                div(class="col-sm-10")
                    select(name="state_filter", class="form-control")
                        option(value="1", selected=items.isActive === 1) Ativo
                        option(value="0", selected=items.isActive === 0) Inativo
           
            div(class="form-group")
                label(for="schoolId", class="control-label col-sm-2") Escola

                div(class="col-sm-10")
                    select(name="schoolId", id="schoolId", class="form-control")
                        each school in itemsSchool
                            option(value="#{school.id}")= school.schoolName


            div(class="form-group")
                div(class="col-sm-offset-2 col-sm-10")
                    input(type="submit", class="btn btn-primary" id="form-submit", value="Alterar")


block additionalScripts
    script(src="/scripts/jquery/jquery.validate.min.js")
    script(src="/scripts/jquery/messages_pt_PT.js")

    script.
        (function () {
            $('#letrinhas-edit-prof').validate({
                rules: {
                    phone: {
                        digits: true
                    },
                    password: {
                        digits: true
                    }
                }
            });
        }());
        