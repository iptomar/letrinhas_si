extends layout

block content
    h1 Lista de Professores
    p #{title}
    table(border =1)
     tr(align="center")
      td Foto do Docente
      td Nome
      td Username
      td E-mail
      td Telefone
      td Estado
      td Escola onde leciona
      td Testes que criou
       -for (var id in items)
        - var item = items[id]
         tr
          td  
           img(src= "/#{item.photoUrl}" height="42" width="42")
          td #{item.name} 
          td #{item.username}
          td #{item.emailAddress}
          td #{item.telephoneNumber}
          td #{item.isActive}
          td #{item.schoolName}
          td 
            a(href="/BackOffice/Tests/Titles?professorId=#{item.id}") Ver testes de leitura
    a(href="/") Voltar