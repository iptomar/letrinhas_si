extends layout

block content
    h1 Lista de Professores

    if (items.length === 0)
        div(class="alert alert-warning") Sem resultados
    else
        div(class="table-responsive")
            table(class="table table-striped")
                thead
                    th Foto do Docente
                    th Nome
                    th Username
                    th E-mail
                    th Telefone
                    th Estado
                    th Escola onde leciona
                    th Ações
                each item in items
                    tr
                        td  
                            img(src= "/#{item.photoUrl}" height="50" width="50")
                        td #{item.name} 
                        td #{item.username}
                        td #{item.emailAddress}
                        td #{item.telephoneNumber}
                        td #{item.isActive  === 1 ? 'Ativo' : 'Inativo'}
                        td #{item.schoolName}
                        td 
                            a(href="/BackOffice/Tests/Titles?professorId=#{item.id}") Ver testes
                            | &nbsp;
                            a(href="/BackOffice/Professors/Edit/#{item.id}") Editar Dados

    a(href="/") Voltar
